<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.AdminMapper">
    <!--登录查询-->
    <select id="adminLogin" resultType="com.example.demo.entity.AdminEntity">
        select *
        from movie_admin
        where userName=#{userName} and userPassword=#{userPassword}
    </select>

    <!--添加用户-->
    <insert id="addUser" parameterType="com.example.demo.entity.AdminEntity">
        insert
        into movie_admin(userName,userPassword,email,mobile)
        values (#{userName},#{userPassword},#{email},#{mobile})
    </insert>
    <!--删除用户-->
    <delete id="delUser" parameterType="int">
        delete from movie_admin where id=#{id}
    </delete>


</mapper>
